<% if @user.rides.count >0 %>
<h2>Rides</h2>
<table>
  <thead>
  <tr>
    <th>Driver</th>
    <th> Available Seats</th>
    <th>Destination</th>
    <th>Pickup</th>
    <th>Departure</th>
    <th>Arrival</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.rides.each do |ride| %>
    <tr>
      <td><%= ride.user.name %></td>
      <td><%= ride.seats %></td>
      <td><%= ride.destination %></td>
      <td><%= ride.pickup %></td>
      <td><%= ride.departure %></td>
      <td><%= ride.arrival %></td>
      <td><%= link_to 'View Ride', ride %></td>
    </tr>
      <% end %>
